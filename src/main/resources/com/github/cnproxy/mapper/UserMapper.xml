<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.cnproxy.mapper.UserMapper">

    <resultMap id="UserResult" type="com.github.cnproxy.entity.User">
        <id property="id" column="id" />
        <result property="qq" column="qq" />
        <result property="pass" column="pass" />
        <result property="inviteBy" column="invite_by" />
    </resultMap>

    <insert id="saveUser" parameterType="com.github.cnproxy.entity.User">
        INSERT INTO users (qq,email,pass,invite_by) VALUES (
          #{qq},#{email},#{pass},#{inviteBy}
        )
    </insert>

    <select id="findUser" resultType="com.github.cnproxy.entity.User">
        SELECT qq,email,pass,invite_by FROM users WHERE qq = <![CDATA[#{qq}]]>
    </select>

</mapper>